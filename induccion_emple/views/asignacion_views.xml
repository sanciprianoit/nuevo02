<odoo>
    <!-- Vista de lista -->
    <record id="view_asignacion_list_induccion" model="ir.ui.view">
        <field name="name">asignacion.list.induccion</field>
        <field name="model">induccion_emple.asignacion</field>
        <field name="arch" type="xml">
            <list>
                <field name="control_numero"/>
                <field name="tipo_induccion_id"/>
                <field name="fecha_asignacion"/>
                <field name="empleado_ids"/>
                <field name="capacitador_empresa_externa"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_asignacion_form_induccion" model="ir.ui.view">
        <field name="name">asignacion.form.induccion</field>
        <field name="model">induccion_emple.asignacion</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="print_asignacion_induccion" type="object" string="Imprimir Ítems" class="btn-primary"/>
                    <button name="print_asignacion_induccion_participantes" type="object" string="Imprimir Participantes" class="btn-secondary"/>
                </header>
                <group>
                    <field name="control_numero" readonly="1"/>
                    <field name="tipo_registro" invisible="1"/>
                    <field name="tipo_induccion_id" required="1"/>
                    <field name="fecha_asignacion"/>
                    <field name="empleado_ids" widget="many2many_tags"/>
                    <field name="capacitador_id" 
                           domain="[('tipo_rol', 'in', ['instructor', 'ambos'])]"
                           options="{'no_create': True, 'no_edit': True}"/>
                    <field name="capacitador_empresa_externa" string="Empresa Externa"/>
                    <field name="descripcion"/>
                </group>
            </form>
        </field>
    </record>
    <record id="action_asignacion_induccion_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="induccion_emple.view_asignacion_form_induccion"/>
        <field name="act_window_id" ref="induccion_emple.action_asignacion_induccion"/>
    </record>
    
    <record id="action_asignacion_induccion_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="induccion_emple.view_asignacion_list_induccion"/>
        <field name="act_window_id" ref="induccion_emple.action_asignacion_induccion"/>
    </record>
</odoo>

