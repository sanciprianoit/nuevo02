<odoo>
    <!-- Vista tipo lista (list) -->
    <record id="view_induccion_registro_tree" model="ir.ui.view">
        <field name="name">induccion.registro.list</field>
        <field name="model">induccion.registro</field>
        <field name="arch" type="xml">
            <list create="false">
                <field name="control_numero"/>
                <field name="nombre"/>
                <field name="fecha"/>
                <field name="capacitador_id"/>
            </list>
        </field>
    </record>

    <!-- Vista tipo formulario (form) -->
    <record id="view_induccion_registro_form" model="ir.ui.view">
        <field name="name">induccion.registro.form</field>
        <field name="model">induccion.registro</field>
        <field name="arch" type="xml">
            <form string="Inducción" create="false" edit="false" delete="false" mode="readonly">
                <sheet>
                    <group>
                        <field name="nombre" readonly="1"/>
                        <field name="fecha"/>
                        
                        <!-- Mostrar solo nombres de empleados -->
                        <field name="empleados_ids" readonly="1">
                            <list>
                                <field name="name"/>
                            </list>
                        </field>

                        <field name="capacitador_id" readonly="1"/>
                        <field name="empresa_externa"/>
                        <field name="descripcion"/>
                    </group>

                    <!-- Sección para mostrar solo los nombres de los ítems -->
                    <group string="Items del Tipo de Inducción">
                        <field name="tipo_item_ids" readonly="1" create="false">
                            <list>
                                <field name="name"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
