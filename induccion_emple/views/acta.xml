<odoo>
    <!-- Vista tipo lista (list) -->
    <record id="view_induccion_registro_tree" model="ir.ui.view">
        <field name="name">induccion.registro.list</field>
        <field name="model">induccion.registro</field>
        <field name="arch" type="xml">
            <list create="false" edit="false">
                <field name="control_numero"/>
                <field name="nombre"/>
                <field name="fecha"/>
                <field name="capacitador_id"/>
            </list>
        </field>
    </record>

    <!-- Vista tipo formulario (form) -->
    <record id="view_induccion_registro_form" model="ir.ui.view">
        <field name="name">induccion.registro.form</field>
        <field name="model">induccion.registro</field>
        <field name="arch" type="xml">
            <form string="InducciÃ³n" create="false">
                <sheet>
                    <group>
                        <field name="nombre" readonly="1"/>
                        <field name="fecha"/>
                        <field name="capacitador_id" readonly="1"/>
                        <field name="empresa_externa"/>
                        <field name="descripcion"/>
                    </group>

                    <group string="Participantes">
                        <field name="linea_empleado_ids">
                            <list editable="top" create="false" delete="false">
                                <field name="empleado_id" readonly="1"/>
                                <field name="asistio"/>
                                <field name="estatus"/>
                                <field name="observacion" attrs="{'invisible': [('estatus', '!=', 'justificado')]}"/>
                                <button name="action_print_acta_individual"
                                        string="Imprimir Acta"
                                        type="object"
                                        class="btn-primary"/>
                            </list>
                        </field>
                    </group>

                    <group string="Items del Registro">
                        <field name="item_line_ids">
                            <list editable="top" create="false" delete="false">
                                <field name="item_id" readonly="1"/>
                                <field name="estatus"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
