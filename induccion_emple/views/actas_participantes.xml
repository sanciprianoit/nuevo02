<odoo>
    <data>
        <!-- Acci√≥n del reporte individual por participante -->
        <record id="action_report_acta_participante" model="ir.actions.report">
            <field name="name">Acta de Participante</field>
            <field name="model">induccion.linea.empleado</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">induccion_emple.report_acta_participante_template</field>
            <field name="report_file">induccion_emple.report_acta_participante_template</field>
            <!-- ‚úÖ Ahora el PDF se descarga con el n√∫mero de control -->
            <field name="print_report_name">'Acta_' + (object.control_numero or 'N/A')</field>
        </record>

        <!-- Plantilla QWeb del reporte de participante -->
        <template id="report_acta_participante_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="linea">
                    <t t-set="company" t-value="user.company_id"/>
                    <t t-call="web.external_layout_standard">
                        <div class="page">

                            <!-- üèõÔ∏è Membrete institucional -->
                            <table style="width:100%; margin-bottom:20px; border:none;">
                                <tr>
                                    <td style="text-align:center;">
                                        <div style="margin-bottom:10px;">
                                            <img t-att-src="'/web/image/res.company/%s/logo' % company.id" style="max-height:80px;"/>
                                        </div>
                                        <h2 style="margin:0;"><span t-field="company.name"/></h2>
                                        <p style="margin:0; font-size:12px; line-height:1.4;">
                                            <span t-field="company.street"/>
                                            <t t-if="company.street2">, <span t-field="company.street2"/></t><br/>
                                            <span t-field="company.city"/>, <span t-field="company.state_id.name"/> - <span t-field="company.zip"/><br/>
                                            <t t-if="company.vat">RIF: <span t-field="company.vat"/> |</t>
                                            Tel: <span t-field="company.phone"/> |
                                            Email: <span t-field="company.email"/>
                                        </p>
                                    </td>
                                </tr>
                            </table>

                            <!-- T√≠tulo principal -->
                            <h2 style="text-align:center;">ACTA DE PARTICIPANTE</h2>

                            <!-- ‚úÖ Datos generales del participante con n√∫mero de control -->
                            <table class="table table-sm info-table" style="width:100%; margin-bottom:20px;">
                                <tr>
                                    <th style="width:20%;">N¬∞ Control:</th>
                                    <td style="width:30%;"><span t-field="linea.control_numero"/></td>
                                    <th style="width:20%;">Empleado:</th>
                                    <td style="width:30%;"><span t-field="linea.empleado_id.name"/></td>
                                </tr>
                                <tr>
                                    <th>Inducci√≥n:</th>
                                    <td><span t-field="linea.induccion_id.nombre"/></td>
                                    <th>Fecha:</th>
                                    <td><span t-field="linea.induccion_id.fecha"/></td>
                                </tr>
                                <tr>
                                    <th>Capacitador:</th>
                                    <td><span t-field="linea.induccion_id.capacitador_id.display_name"/></td>
                                    <th>Estatus:</th>
                                    <td><span t-field="linea.estatus"/></td>
                                </tr>
                                <tr>
                                    <th>Asisti√≥:</th>
                                    <td><t t-esc="linea.asistio and 'S√≠' or 'No'"/></td>
                                    <th>Observaci√≥n:</th>
                                    <td><span t-field="linea.observacion"/></td>
                                </tr>
                            </table>

                            <!-- Items de Inducci√≥n -->
                            <h3>Items de Inducci√≥n</h3>
                            <table class="table table-sm" style="width:100%; margin-top:10px;">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Estatus</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="linea.item_ids" t-as="item">
                                        <tr>
                                            <td><span t-field="item.item_id.name"/></td>
                                            <td><span t-field="item.estatus"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
