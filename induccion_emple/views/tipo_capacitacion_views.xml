<odoo>
    
<!-- Vista de árbol para tipos de capacitación -->
    <record id="view_tipo_capacitacion_tree" model="ir.ui.view">
        <field name="name">tipo.capacitacion.list</field>
        <field name="model">capacitacion.tipo</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="activo"/>
            </list>
        </field>
    </record>
    <!-- Vista de formulario para tipos de capacitación -->
    <record id="view_tipo_capacitacion_form" model="ir.ui.view">
        <field name="name">tipo.capacitacion.form</field>
        <field name="model">capacitacion.tipo</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_tipos_capacitacion" model="ir.actions.act_window">
        <field name="name">Tipos de Capacitación</field>
        <field name="res_model">capacitacion.tipo</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>