<odoo>
    <data>
        <!-- Vista de lista (Tree View) para Actas -->
        <record id="acta_capacitacion_tree_view" model="ir.ui.view">
            <field name="name">acta.capacitacion.list</field>
            <field name="model">induccion_emple.acta_capacitacion</field>
            <field name="arch" type="xml">
                <list string="Actas de Capacitación" create="false">
                    <field name="name"/>
                    <field name="tipo_id"/>
                    <field name="capacitador_id"/>
                    <field name="fecha"/>
                </list>
            </field>
        </record>

        <!-- Vista de formulario (Form View) para Actas -->
        <record id="acta_capacitacion_form_view" model="ir.ui.view">
            <field name="name">acta.capacitacion.form</field>
            <field name="model">induccion_emple.acta_capacitacion</field>
            <field name="arch" type="xml">
                <form string="Acta de Capacitación" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Referencia del Acta"/>
                                <field name="capacitador_id"/>
                                <field name="tipo_id"/>
                            </group>
                            <group>
                                <field name="fecha" string="Fecha de Asignación"/>
                                <field name="fecha_ejecucion"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Asistencia de Participantes">
                                <field name="asistencia_ids">
                                    <!-- No se permite eliminar, solo editar -->
                                    <list editable="bottom" create="false" delete="false">
                                        <field name="participante_id"/>
                                        <field name="status" widget="selection"/>
                                        <field name="observacion"/>
                                        <!-- Botón individual por participante -->
                                        <button name="imprimir_acta_individual"
                                                type="object"
                                                string="Imprimir"
                                                class="btn-primary"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Pautas Impartidas">
                                <field name="pauta_ids">
                                    <list editable="bottom">
                                        <field name="titulo"/>
                                        <field name="observacion" required="1"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para la ventana de "Acta de Capacitación" sin botón de creación -->
        <record id="action_acta_capacitacion" model="ir.actions.act_window">
            <field name="name">Acta de Capacitación</field>
            <field name="res_model">induccion_emple.acta_capacitacion</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="acta_capacitacion_tree_view"/>
            <field name="context">{'create': False}</field>
        </record>
    </data>
</odoo>
