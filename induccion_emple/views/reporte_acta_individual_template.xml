<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Acci√≥n del reporte individual por participante -->
        <record id="action_report_acta_individual" model="ir.actions.report">
            <field name="name">Acta Individual de Capacitaci√≥n</field>
            <field name="model">induccion_emple.asistencia_participante</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">induccion_emple.report_acta_individual_template</field>
            <field name="print_report_name">'Acta_' + (object.participante_id.name or 'N/A')</field>
        </record>

        <!-- Plantilla QWeb del reporte -->
       <template id="report_acta_individual_template">
    <!-- Definimos company para evitar KeyError en external_layout_standard -->
    <t t-set="company" t-value="docs and docs[0].env.company or False"/>

    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="linea">
            <t t-call="web.external_layout_standard">
                <div class="page">

                    <!-- üèõÔ∏è Membrete institucional -->
                    <table style="width:100%; margin-bottom:20px; border:none;">
                        <tr>
                            <td style="text-align:center;">
                                <div style="margin-bottom:10px;">
                                    <img t-att-src="'/web/image/res.company/%s/logo' % company.id" style="max-height:80px;"/>
                                </div>
                                <h2 style="margin:0;"><span t-field="company.name"/></h2>
                                <p style="margin:0; font-size:12px; line-height:1.4;">
                                    <span t-field="company.street"/>
                                    <t t-if="company.street2">, <span t-field="company.street2"/></t><br/>
                                    <span t-field="company.city"/>, <span t-field="company.state_id.name"/> - <span t-field="company.zip"/><br/>
                                    <t t-if="company.vat">RIF: <span t-field="company.vat"/> |</t>
                                    Tel: <span t-field="company.phone"/> |
                                    Email: <span t-field="company.email"/>
                                </p>
                            </td>
                        </tr>
                    </table>

                    <!-- üìù T√≠tulo principal -->
                    <h2 style="text-align:center;">ACTA DE PARTICIPANTE</h2>

                    <!-- üë§ Datos del participante -->
                    <table class="table table-sm info-table" style="width:100%; margin-bottom:20px;">
                        <tr>
                            <th style="width:20%;">Participante:</th>
                            <td style="width:30%;"><t t-esc="linea.participante_id.name"/></td>
                            <th style="width:20%;">Estatus:</th>
                            <td style="width:30%;"><t t-esc="dict(linea._fields['status'].selection).get(linea.status)"/></td>
                        </tr>
                        <tr>
                            <th>Observaci√≥n:</th>
                            <td colspan="3"><t t-esc="linea.observacion or 'N/A'"/></td>
                        </tr>
                        <tr>
                            <th>Fecha de Ejecuci√≥n:</th>
                            <td colspan="3"><t t-esc="linea.acta_id.fecha_ejecucion or 'No Generada'"/></td>
                        </tr>
                    </table>

                    <!-- üßë‚Äçüè´ Datos del capacitador -->
                    <h3>Datos del Capacitador</h3>
                    <table class="table table-sm info-table" style="width:100%; margin-bottom:20px;">
                        <tr>
                            <th style="width:20%;">Capacitador:</th>
                            <td style="width:30%;"><t t-esc="linea.acta_id.capacitador_id.display_name or 'No asignado'"/></td>
                            <th style="width:20%;">Tipo de Capacitaci√≥n:</th>
                            <td style="width:30%;"><t t-esc="linea.acta_id.tipo_id.name or ''"/></td>
                        </tr>
                        <tr>
                            <th>Fecha de Asignaci√≥n:</th>
                            <td><t t-esc="linea.acta_id.fecha or ''"/></td>
                            <th>Fecha de Ejecuci√≥n:</th>
                            <td><t t-esc="linea.acta_id.fecha_ejecucion or ''"/></td>
                        </tr>
                    </table>

                    <!-- üìö Pautas impartidas -->
                    <h3>Pautas Impartidas</h3>
                    <ul style="margin-left:20px;">
                        <t t-foreach="linea.acta_id.pauta_ids" t-as="pauta">
                            <li><strong><t t-esc="pauta.titulo"/>:</strong> <t t-esc="pauta.observacion"/></li>
                        </t>
                    </ul>

                </div>
            </t>
        </t>
    </t>
</template>

    </data>
</odoo>
