<odoo>
    <record id="view_asignacion_form_capacitacion" model="ir.ui.view">
        <field name="name">asignacion.form.capacitacion</field>
        <field name="model">induccion_emple.asignacion</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_imprimir_acta_capacitacion"
                            type="object"
                            string="Imprimir Acta"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="control_numero" readonly="1"/>
                            <field name="tipo_registro" invisible="1"/>
                            <field name="tipo_capacitacion_id" required="1"/>
                            <field name="fecha_asignacion"/>
                        </group>
                        <group>
                            <field name="capacitador_id"
                                   domain="[('tipo_rol', 'in', ['capacitador', 'ambos'])]"
                                   options="{'no_create': True, 'no_edit': True}"/>
                            <field name="capacitador_empresa_externa" string="Empresa Externa"/>
                        </group>
                    </group>
                    <group>
                        <field name="empleado_ids" widget="many2many_tags"/>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_asignacion_list_capacitacion" model="ir.ui.view">
        <field name="name">asignacion.list.capacitacion</field>
        <field name="model">induccion_emple.asignacion</field>
        <field name="arch" type="xml">
            <list>
                <field name="control_numero"/>
                <field name="tipo_capacitacion_id"/>
                <field name="fecha_asignacion"/>
                <field name="empleado_ids"/>
                <field name="capacitador_empresa_externa"/>
            </list>
        </field>
    </record>

    <record id="action_asignacion_capacitacion_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="induccion_emple.view_asignacion_form_capacitacion"/>
        <field name="act_window_id" ref="induccion_emple.action_asignacion_capacitacion"/>
    </record>

    <record id="action_asignacion_capacitacion_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="induccion_emple.view_asignacion_list_capacitacion"/>
        <field name="act_window_id" ref="induccion_emple.action_asignacion_capacitacion"/>
    </record>
</odoo>
